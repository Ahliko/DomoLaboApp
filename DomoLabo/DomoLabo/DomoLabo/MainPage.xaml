<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    Background="#252840"
    x:Class="DomoLabo.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:dataClass="clr-namespace:DomoLabo.DataClass;assembly=DomoLabo"
    xmlns:local="clr-namespace:DomoLabo"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Resources />

    <StackLayout>
        <StackLayout Margin="40,80">
            <Label FontSize="18" TextColor="DarkGray">Welcome</Label>
            <Label
                FontAttributes="Bold"
                FontSize="30"
                Margin="0"
                TextColor="White">
                Username
            </Label>
            <Label
                FontAttributes="Bold"
                FontSize="10"
                TextColor="DarkGray">
                100 devices connected
            </Label>
        </StackLayout>
        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
            <Label
                FontAttributes="Bold"
                TextColor="White"
                x:Name="Header" />

        </StackLayout>
        <StackLayout Margin="25,5">
            <Label
                FontAttributes="Bold"
                FontSize="12"
                TextColor="DarkGray">
                Favorite devices
            </Label>
            <ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal">
                <StackLayout Orientation="Horizontal">
                    <StackLayout Orientation="Horizontal">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="AddObj" />
                        </StackLayout.GestureRecognizers>
                        <Frame
                            Background="#3B3D51"
                            CornerRadius="10"
                            HeightRequest="65"
                            Margin="2"
                            Padding="10"
                            WidthRequest="138">
                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                <StackLayout VerticalOptions="Center" WidthRequest="30">
                                    <Image Source="add.png" />
                                </StackLayout>
                            </StackLayout>
                        </Frame>

                        <StackLayout x:Name="test" />

                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </StackLayout>


        <StackLayout Margin="25,5">
            <Label
                FontAttributes="Bold"
                FontSize="12"
                TextColor="DarkGray">
                Devices groups
            </Label>
            <ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal">
                <StackLayout Orientation="Horizontal">
                    <Frame
                        Background="#3B3D51"
                        CornerRadius="10"
                        HeightRequest="160"
                        Margin="2"
                        Padding="10"
                        WidthRequest="138">
                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="StartTest" />
                            </Grid.GestureRecognizers>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackLayout Grid.Column="0" Margin="10">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        TextColor="White">
                                        Name
                                    </Label>
                                    <Label FontSize="8" TextColor="White">Contains</Label>
                                </StackLayout>
                            </Grid>
                        </Grid>
                    </Frame>
                    <Frame
                        Background="#3B3D51"
                        CornerRadius="10"
                        HeightRequest="160"
                        Margin="2"
                        Padding="10"
                        WidthRequest="138">
                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="StopTest" />
                            </Grid.GestureRecognizers>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackLayout Grid.Column="0" Margin="10">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        TextColor="White">
                                        Name
                                    </Label>
                                    <Label FontSize="8" TextColor="White">Contains</Label>
                                </StackLayout>
                            </Grid>
                        </Grid>
                    </Frame>
                    <Frame
                        Background="#3B3D51"
                        CornerRadius="10"
                        HeightRequest="160"
                        Margin="2"
                        Padding="10"
                        WidthRequest="138">
                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_OnTapped" />
                            </Grid.GestureRecognizers>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackLayout Grid.Column="0" Margin="10">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        TextColor="White">
                                        Name
                                    </Label>
                                    <Label FontSize="8" TextColor="White">Contains</Label>
                                </StackLayout>
                            </Grid>
                        </Grid>
                    </Frame>
                    <Frame
                        Background="#3B3D51"
                        CornerRadius="10"
                        HeightRequest="160"
                        Margin="2"
                        Padding="10"
                        WidthRequest="138">
                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ObjectChangeState" />
                            </Grid.GestureRecognizers>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackLayout Grid.Column="0" Margin="10">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        TextColor="White">
                                        Name
                                    </Label>
                                    <Label FontSize="8" TextColor="White">Contains</Label>
                                </StackLayout>
                            </Grid>
                        </Grid>
                    </Frame>
                </StackLayout>
            </ScrollView>

        </StackLayout>
    </StackLayout>

</ContentPage>